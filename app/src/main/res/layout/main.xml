<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="com.gilshelef.feedme.activities.MainActivity">

    <include
        layout="@layout/app_bar"
        android:id="@+id/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/lightPrimaryColor"
        style="?android:attr/buttonBarStyle"
        android:id="@+id/views_toolbar"
        android:layout_below="@id/toolbar"
        android:elevation="3dp">

        <View
            android:id="@+id/divider"
            android:background="?android:attr/dividerVertical"
            android:layout_width="1dip"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dip"
            android:layout_marginTop="4dip"
            android:layout_centerHorizontal="true"/>

        <Button
            android:text="@string/map_tab"
            android:padding="1dp"
            android:id="@+id/map_fragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            style="?android:attr/buttonBarStyle"
            android:background="@color/lightPrimaryColor"
            android:textColor="@color/text_color_selector"
            android:layout_toStartOf="@id/divider"/>

        <Button
            android:background="@color/lightPrimaryColor"
            android:padding="1dp"
            android:text="@string/list_tab"
            style="?android:attr/buttonBarStyle"
            android:id="@+id/list_fragment_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@id/divider"
            android:textColor="@color/text_color_selector" />

    </RelativeLayout>

    <FrameLayout
        android:background="#fff"
        android:id="@+id/fragment_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/views_toolbar">

    </FrameLayout>

</RelativeLayout>


