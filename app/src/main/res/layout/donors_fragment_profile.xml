<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background"
        android:layout_weight="0.27">

        <RelativeLayout
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trophy"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="34dp"
                    android:id="@+id/medal_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/edit_business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:paddingEnd="12dp"
            android:text="@string/business_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/business_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_business_name"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:gravity="start"
            android:paddingEnd="12dp"
            android:drawablePadding="8dp"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/edit_donor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:paddingEnd="12dp"
            android:text="@string/contact_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/donor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_donor_name"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:gravity="start"
            android:paddingEnd="12dp"
            android:drawablePadding="8dp"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/edit_donor_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:paddingEnd="12dp"
            android:text="@string/business_address"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/donor_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_donor_address"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:gravity="start"
            android:paddingEnd="12dp"
            android:drawablePadding="8dp"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/edit_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:clickable="true"
            android:paddingEnd="12dp"
            android:text="@string/contact_phone"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_phone"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:gravity="end"
            android:paddingEnd="12dp"
            android:drawablePadding="8dp"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="1dp">

        <TextView
            android:id="@+id/donation_type"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="12dp"
            android:drawablePadding="8dp"
            android:drawableEnd="@drawable/ic_edit_black_24dp"
            android:layout_height="wrap_content"
            android:text="@string/donation_type"/>

        <Spinner
            android:id="@+id/donation_type_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingStart="2dp"
            android:layout_toStartOf="@id/donation_type" />
    </RelativeLayout>


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="8dp"
        android:layout_marginTop="24dp"
        card_view:cardCornerRadius="4dp">

        <Button
            android:id="@+id/remove_registration_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textSize="25sp"
            android:text="@string/remove_registration"
            android:textColor="@color/lightPrimaryColor" />
    </android.support.v7.widget.CardView>


</LinearLayout>