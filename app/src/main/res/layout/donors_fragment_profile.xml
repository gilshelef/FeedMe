<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background">
        <RelativeLayout
            android:gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/trophy"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="34dp"
                    android:id="@+id/medal_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0" />
            </RelativeLayout>
        </RelativeLayout>
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <!--business name-->
            <RelativeLayout
                android:id="@+id/business_name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/edit_business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:text="@string/business_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/business_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/edit_business_name"
                    android:layout_marginTop="2dp"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <!--divider-->
            <View
                android:layout_below="@id/business_name_container"
                android:id="@+id/divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/divider" />


            <!--name-->
            <RelativeLayout
                android:id="@+id/name_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_1"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/edit_donor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:text="@string/contact_name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/donor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/edit_donor_name"
                    android:layout_marginTop="2dp"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <!--divider-->
            <View
                android:id="@+id/divider_2"
                android:layout_below="@id/name_container"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/divider" />

            <!--address-->
            <RelativeLayout
                android:id="@+id/address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_2"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/edit_donor_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:text="@string/business_address"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/donor_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/edit_donor_address"
                    android:layout_marginTop="2dp"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="start"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <!--divider-->
            <View
                android:id="@+id/divider_3"
                android:layout_below="@id/address_container"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/divider" />

            <!--phone-->
            <RelativeLayout
                android:id="@+id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider_3"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/edit_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:clickable="true"
                    android:text="@string/contact_phone"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/contact_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@id/edit_phone"
                    android:layout_marginTop="2dp"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="end"
                    android:padding="8dp"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </RelativeLayout>

            <!--divider-->
            <View
                android:id="@+id/divider_4"
                android:layout_below="@id/phone_container"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/divider" />

            <!--donation type-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@id/divider_4"
                android:id="@+id/donation_type_container"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:id="@+id/donation_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:drawableEnd="@drawable/ic_edit_black_24dp"
                    android:drawablePadding="8dp"
                    android:paddingEnd="12dp"
                    android:text="@string/donation_type" />

                <Spinner
                    android:id="@+id/donation_type_spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="20dp"
                    android:layout_toStartOf="@id/donation_type"
                    android:paddingStart="2dp" />
            </RelativeLayout>


            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:paddingBottom="8dp"
                android:layout_marginBottom="30dp"
                android:layout_below="@id/donation_type_container"
                android:elevation="8dp"
                android:layout_marginTop="24dp"
                card_view:cardCornerRadius="@dimen/button_corner_radius">

                <Button
                    android:id="@+id/remove_registration_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:paddingLeft="70dp"
                    android:paddingRight="70dp"
                    android:text="@string/remove_registration"
                    android:textColor="@color/lightPrimaryColor"
                    android:textSize="25sp" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>